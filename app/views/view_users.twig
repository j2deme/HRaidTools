{% extends 'base.twig' %}
{% block css %}
  <link rel="stylesheet" href="{{ css }}AdminLTE.css">
  <link rel="stylesheet" href="{{ css }}ui.css">
  <link rel="stylesheet" href="{{ css }}ionicons.min.css">
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12 text-center page-header"><h2>Welcome System Administrator</h2></div>
  </div>
  <div class="row">
    <div class="col-md-2">
      {% include 'navbar_admin.twig' %}
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="box">
          <div class="box-header">
            <h3 class="title-box text-center">Users</h3>
          </div>
          <div class="box-body">
            <table class="table table-bordered table-hover table-responsive">
              <thead>
                <tr role="row">
                  <th>#</th>
                  <th>Names</th>
                  <th>Last Name</th>
                  <th>Second Last Name</th>
                  <th>Email</th>
                  <th>Username</th>
                  <th>Organization</th>
                </tr>
              </thead>
              <tfoot>
                <tr role="row">
                  <th>#</th>
                  <th>Names</th>
                  <th>Last Name</th>
                  <th>Second Last Name</th>
                  <th>Email</th>
                  <th>Username</th>
                  <th>Organization</th>
                </tr>
              </tfoot>
              <tbody>
                {% for user in users %}
                  <tr>
                    <th>{{ user.id }}</th>
                    <th>{{ user.name }}</th>
                    <th>{{ user.lastname }}</th>
                    <th>{{ user.lastname_second }}</th>
                    <th>{{ user.email }}</th>
                    <th>{{ user.username }}</th>
                    <th>{{ user.organization_id }}</th>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
