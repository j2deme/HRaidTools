<div id="loginForm" name="loginForm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="loginForm" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="text-center">Login</h2>
      </div>
      <form action="{{ urlFor('login') }}" method="post" class="form-horizontal" role="form">
      <div class="modal-body">
        <div class="form col-md-12 center-block">
          <div class="form-group float-label-control">
            <label for="username">Username or Email</label>
            <input id="username" name="username" class="form-control input-lg" placeholder="Username or Email" type="text" autocomplete="off">
          </div>
          <div class="form-group float-label-control">
            <label for="password">Password</label>
            <input id="password" name="password" class="form-control input-lg" placeholder="Password" type="password" autocomplete="off">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Sign In</button>
          </div>
          <div class="form-group">
            <span><a href="{{ urlFor('signup') }}">Forgot password?</a></span>
            <span class="pull-right"><a href="{{ urlFor('signup') }}">Sign up</a></span>
          </div>
        </div>
      </div>
      </form>
      <div class="modal-footer">
        <div class="col-md-1accordion2">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
