{# CRUD of distributions #}
{% extends 'base.twig' %}
{% import 'forms.twig' as f %}
{% block css %}
  <link rel="stylesheet" href="{{ css }}AdminLTE.css">
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12 text-center page-header"><h2>Welcome System Administrator</h2></div>
  </div>
  <div class="row">
    <div class="col-md-2">
      {% include 'navbar_admin.twig' %}
    </div>
    <div class="col-md-4">
      <form class="form-horizontal" action="{{ urlFor('add_distribution') }}" method="post" role="form">
        <div class="row">
          <div class="col-md-12 text-center">
            <h3>New Distribution</h3>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('name','Name:','col-md-5') }}
              <div class="col-md-7">{{ f.text('name') }}</div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('display_order','Display Order:','col-md-5') }}
              <div class="col-md-7">{{ f.text('display_order') }}</div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('is_trace_generator','Is Trace Generator:','col-md-5') }}
              <div class="col-md-6 col-md-offset-1">{{ f.check('is_trace_generator','','true') }}</div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('available','Available:','col-md-5') }}
              <div class="col-md-6 col-md-offset-1">{{ f.check('available','','true') }}</div>
            </div>
          </div>
          <div class="col-md-4 col-md-offset-5">
            <button class="btn btn-primary btn-block">Save</button>
          </div>
        </div>
      </form>
    </div>
{% endblock %}
