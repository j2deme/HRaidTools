{# CRUD of distributions #}
{% extends 'base.twig' %}
{% import 'forms.twig' as f %}
{% block css %}
  <link rel="stylesheet" href="{{ urlFor('root') }}/public/css/AdminLTE.css">
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12 text-center page-header"><h2>Welcome System Administrator</h2></div>
  </div>
  <div class="row">
    <div class="col-md-2">
      {% include 'navbar_admin.twig' %}
    </div>
    <div class="col-md-4">
      <form class="form-horizontal" action="{{ urlFor('add-distribution') }}" method="post" role="form">
        <div class="row">
          <div class="col-md-12 text-center">
            {% if distribution.id is defined %}
              <h3>Edit Distribution</h3>
            {% else %}
              <h3>New Distribution</h3>
            {% endif %}
          </div>
          {% if distribution.id is defined %}
            <input type="hidden" id="id" name="id" value="{{ distribution.id }}">
          {% else %}
            <input type="hidden" id="id" name="id" value="">
          {% endif %}
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('name','Name:','col-md-5') }}
              <div class="col-md-7">
                {% if distribution.name is defined %}
                  <input type="text" id="name" name="name" class="form-control" value="{{ distribution.name }}">
                {% else %}
                  <input type="text" id="name" name="name" class="form-control" value="" >
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('display_order','Display Order:','col-md-5') }}
              <div class="col-md-7">
                {% if distribution.display_order is defined %}
                  <input type="text" id="display_order" name="display_order" class="form-control" value="{{ distribution.display_order }}">
                {% else %}
                  <input type="text" id="display_order" name="display_order" class="form-control" value="" >
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('is_trace_generator','Is Trace Generator:','col-md-5') }}
              <div class="col-md-2">
                {% if distribution.is_trace_generator == true %}
                  <input type="checkbox" id="is_trace_generator" name="is_trace_generator" class="form-control" value="{{ distribution.is_trace_generator }}" checked>
                {% else %}
                  <input type="checkbox" id="is_trace_generator" name="is_trace_generator" class="form-control" value="false" >
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('available','Available:','col-md-5') }}
              <div class="col-md-2">
                {% if distribution.available == true %}
                  <input type="checkbox" id="available" name="available" class="form-control" value="{{ distribution.available }}" checked>
                {% else %}
                  <input type="checkbox" id="available" name="available" class="form-control" value="false" >
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-md-4 col-md-offset-3">
            <button class="btn btn-primary btn-block">Save</button>
          </div>
          <div class="col-md-4">
            <a href="{{ urlFor('distributions') }}" class="btn btn-default btn-block">Cancel</a>
          </div>
        </div>
      </form>
    </div>
{% endblock %}
