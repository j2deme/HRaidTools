{% extends 'base.twig' %}
{% block content %}
<div class="row">

</div>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2 class="text-center">Login</h2>
    {% if flash.errors is not empty %}
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><i class="fa fa-times-circle"></i> Error!</h2>
      <ul>
        {% for error in flash.errors %}
          <li>{{ error|replace({ ':email:': flash.email }) }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <form action="{{ urlFor('login') }}" method="post" class="form-horizontal transparent" role="form">
      <div class="form col-md-12 center-block">
        <div class="form-group float-label-control">
          <label for="username">Username or Email</label>
          <input id="username" name="username" class="form-control input-lg" placeholder="Username or Email" type="text" autocomplete="off">
        </div>
        <div class="form-group float-label-control">
          <label for="password">Password</label>
          <input id="password" name="password" class="form-control input-lg" placeholder="Password" type="password" autocomplete="off">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Sign In</button>
        </div>
        <div class="form-group">
          <span><a href="{{ urlFor('signup') }}">Forgot password?</a></span>
          <span class="pull-right"><a href="{{ urlFor('signup') }}">Sign up</a></span>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
