{% extends 'base.twig' %}
{% import 'forms.twig' as f %}
{% block css %}
  <link rel="stylesheet" href="{{ css }}bootstrap-table.css">
  <link rel="stylesheet" href="{{ css }}AdminLTE.css">
{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-12 text-center page-header"><h2>Welcome System Administrator</h2></div>
  </div>
  <div class="row">
    <div class="col-md-2">
      {% include 'navbar_admin.twig' %}
    </div>
    <div class="col-md-5">
      <div class="row">
        <div class="box">
          <div class="box-header">
            <h3 class="title-box text-center"><i class="fa fa-reorder"></i>&nbsp;Statuses</h3>
          </div>
          <div class="box-body">
            <table class="table table-bordered table-hover table-responsive" data-toggle="table" data-url="{{ urlFor('root') }}statuses.json" data-height="246" data-pagination="true">
                <thead>
                <tr>
                    <th data-field="id">#</th>
                    <th data-field="name">Name</th>
                    <th data-field="id" data-formatter="modalLink">Info</th>
                </tr>
                </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <form class="form-horizontal" action="{{ urlFor('add-status') }}" method="post" role="form">
        <div class="row">
          <div class="col-md-12 text-center">
            <h3>New Status</h3>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {{ f.label('name','Name:','col-md-4') }}
              <div class="col-md-6">{{ f.text('name') }}</div>
            </div>
          </div>
          <div class="col-md-4 col-md-offset-4">
            <button class="btn btn-primary btn-block">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
{% block js %}
  <script src="{{ js }}bootstrap-table.js"></script>
  <script>
    function modalLink(value) {
      return '<a href="#" data-toggle="modal" data-id="'+value+'"><i class="fa fa-warning">&nbsp;More info</i></a>'
    };
  </script>
{% endblock %}
